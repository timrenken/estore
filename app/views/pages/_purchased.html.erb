<table class="table table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Date</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @purchased.each do |sale| %>
        <tr>
          <td><%= link_to sale.book.name, pickup_path(sale.guid) %></td>
          <td><%= time_ago_in_words(sale.created_at) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>